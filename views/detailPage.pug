    // ---------------slider---------------------
    #detail-cover.flex-row
      .cover(style=`\
      background-image: url(${movie.poster});\
      `)
      .detail-cover-left.flex-row
        .detail-cover-left-img
          img(src=`${movie.poster}`, alt='')
      .detail-cover-right.flex-row
        .detail-cover-right-container
          .detail-cover-right-title
            =`${movie.movieName}`
          .detail-cover-right-alldetails
